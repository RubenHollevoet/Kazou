{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="row">
    <div class="col-md-6">
        <h1>TODO: FB and Google login</h1>
    </div>
    <div class="col-md-6">
        <form action="{{ path("fos_user_security_check") }}" method="post">
            <div class="form-group">
                {% if csrf_token %}
                    <input class="form-control" type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                {% endif %}
            </div>

            <div class="form-group">
                <label class="control-label" for="username">{{ 'security.login.username'|trans }}</label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>
            </div>

            <div class="form-group">
                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input class="form-control" type="password" id="password" name="_password" required="required"/>
            </div>
            <div class="form-group">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
            <div class="form-group">
                <input class="btn btn-success" type="submit" value="{{ 'security.login.submit'|trans }}"/>
            </div>
        </form>
    </div>
</div>
