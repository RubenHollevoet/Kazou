{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/register.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row register-selector">
            <div class="register-facebook">
                <a href="{{ fbLoginUrl }}"><span class="fa fa-facebook"></span>Login met Facebook</a>
            </div>
            <span class="split">OF</span>
            <div>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {{ form_start(form) }}
                {{ form_row(form._username) }}
                {{ form_row(form._password) }}
                <button type="submit" class="btn btn-success">Login</button>
                {{ form_end(form) }}

                <a href="{{ path('user_register') }}" class="btn btn-default">Register</a>
            </div>
        </div>
    </div>
{% endblock %}
